<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SignUp</title>

    <!-- Font awsome Kit -->
    <script src="https://kit.fontawesome.com/62765ee528.js" crossorigin="anonymous"></script>

    <!-- Bootstrap CDN -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous" />

      <!-- custom css -->
    <link rel="stylesheet" href="/css/main.css" />

    <!-- custom js -->
    <script src="/js/utils.js" defer></script>

  </head>
  <body>
    <nav class="navigation">
      <div class="container">
        <div class="navigation__brand">
          <h5 class="text-bolder">CBI</h5>
        </div>
        <div class="navigation__actions">
          <div class="navigation__actions-links">
            <a href="/">Home</a>
            <a href="#products">Online Store</a>
          </div>
          <div class="navigation__actions-buttons">
            <a href="/login" class="btn btn__signup">Dashboard</a>
          </div>
        </div>
      </div>
    </nav>

    <main class="signup">
      <div class="signup__container">
        <h4>Create an account</h4>
        <form action="/signup" method="POST" class="signup__form" id="signup">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
          <div class="form_group">
            <label for="firstname">Firstname</label>
            <input
              type="text"
              name="first_name"
              id="firstname"
              placeholder="John" required/>
          </div>
          <div class="form_group">
            <label for="last_name">Lastname</label>
            <input
              type="text"
              name="last_name"
              id="lastname"
              placeholder="Doe" required/>
          </div>
          <div class="form_group">
            <label for="email">Email</label>
            <input
              type="email"
              name="email"
              placeholder="johndoe@email.com"
              id="email" required/>
          </div>
          <div class="form_group">
            <label for="password">Passowrd</label>
            <input
              type="password"
              name="password"
              id="password"
              placeholder="******" required/>
              <button type="button" id="togglePassword"><i class="fa-regular fa-eye-slash"></i></button>
          </div>
          <div class="form_group">
            <label for="confirm">Confirm password</label>
            <input
              type="password"
              id="confirm"
              placeholder="******" />
          </div>
          <button type="submit" class="btn btn__submit">Sign up</button>
          <small>Already have an account? <a href="/login">Log in</a></small>
        </form>

        <% if (error.length > 0) { %>
          <div id="error-msg">
            <i class="fa fa-times-circle"></i>
            <%= error %>
          </div>
        <%}else{%>
          <div id="error-msg"></div>
        <%}%>


      </div>
    </main>

  </body>
</html>