<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Font awsome Kit -->
    <script
      src="https://kit.fontawesome.com/62765ee528.js"
      crossorigin="anonymous"></script>

    <!-- Bootstrap CDN -->

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous" />

    <!-- Chart CSS CDN -->

    <link rel="stylesheet" href="/css/dashboard.css" />

    <!-- custom js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js" defer></script>
    <script src="/js/dashboard/dashboard.js" defer></script>
    <script src="/js/dashboard/reports.js" defer></script>

    <title>Document</title>
  </head>
  <body>
    <main class="dashboard">
      <div class="sidebar">
        <div class="sidebar_top">
          <h4>Ticketing System</h4>
        </div>
        <div class="sidebar_main">
          <div class="user">
            <div class="user_image"><img src="" alt="" /></div>
            <div class="user_info">
              <h5>John Doe</h5>
              <p>johndo@email.com</p>
            </div>
          </div>
          <div class="sidebar_links">
            <span class="sidebar_link">
              <a href="./dashboard.html"
                ><i class="fa-solid fa-gauge"></i> Dashboard</a
              >
            </span>
            <span class="sidebar_link">
              <a href="./agents.html"
                ><i class="fa-solid fa-users"></i> Agents</a
              >
            </span>
            <span class="sidebar_link">
              <a href="./clients.html"
                ><i class="fa-solid fa-users"></i> Clients</a
              >
            </span>

            <span class="sidebar_link">
              <a href="./tickets.html"
                ><i class="fa-solid fa-ticket"></i> Tickets</a
              >
            </span>
            <span class="sidebar_link active">
              <a href="./reports.html"
                ><i class="fa-solid fa-file-pen"></i> Report</a
              >
            </span>
          </div>
        </div>
      </div>
      <div class="main_content">
        <div class="main_content-top">
          <button
            type="button"
            class="sidebar_collapse-btn btn"
            id="toggleSidebar">
            <i class="fa-solid fa-bars"></i>
          </button>
          <div class="user">
            <div class="user_image"><img src="" alt="" /></div>
            <div class="user_info">
              <h5>John Doe</h5>
              <a href="./editprofile.html">Edit Profile</a>
            </div>
          </div>
        </div>
        <div class="main_content-main">
          <div class="dashboard_title">
            <h2>Reports</h2>
            <div class="dashboard_title-nav">
              <i class="fa-solid fa-gauge"></i>
              <small>Home </small>
              <small><i class="fa-solid fa-chevron-right"></i></small>
              <small>Reports</small>
            </div>
          </div>
          <div class="dashboard_content">
            <div class="dashboard_reports">
              <div class="reports_main">
                <h6>All Tickets</h6>
                <ul class="tickets_list"></ul>
              </div>
              <div class="reports_charts">
                <h6>Charts</h6>
                <div class="reports_charts-stats tickets-stats">
                  <div class="filter_container">
                    <label>Filter by:</label>
                    <div>
                      <select id="ticketStatus" class="form-select">
                        <option value="open">Open</option>
                        <option value="closed">Closed</option>
                      </select>
                    </div>
                  </div>
                  <canvas id="ticket-stats"></canvas>
                </div>
                <div class="reports_charts-stats users-stats">
                  <canvas id="users-stats"></canvas>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>
