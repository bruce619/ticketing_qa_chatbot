<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dasboard - Home</title>

    <!-- Font awsome Kit -->
    <script src="https://kit.fontawesome.com/62765ee528.js" crossorigin="anonymous"></script>

    <!-- Bootstrap CDN -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous" />

      <!-- custom css -->
    <link rel="stylesheet" href="/css/dashboard.css" />

    <!-- custom js -->
    <script src="/js/dashboard/dashboard.js" defer></script>

  </head>
  <body>
    <main class="dashboard">
      <div class="sidebar">
        <div class="sidebar_top">
          <h4>Ticketing System</h4>
        </div>
        <div class="sidebar_main">
          <div class="user">
            <div class="user_image">
              <img src="/img/user.png" alt="avatar" />
            </div>
            <div class="user_info">
              <h5><%= current_user.fullName() %></h5>
              <p><%= current_user.email %></p>
            </div>
          </div>

          <div class="sidebar_links">
            <span class="sidebar_link active">
              <a href="/dashboard/home">
                <i class="fa-solid fa-gauge"></i> Dashboard
                </a>
            </span>
            <% if (user_role === 'admin') {%>
              <span class="sidebar_link">
                <a href="/dashboard/create/agent"><i class="fa-solid fa-users"></i> Agents</a>
              </span>
            <%}%>
            <span class="sidebar_link">
              <a href="/dashboard/create/client"><i class="fa-solid fa-users"></i> Clients</a>
            </span>
            <span class="sidebar_link">
              <% if (user_role === 'admin') {%>
              <a href="/dashboard/admin/ticket"><i class="fa-solid fa-ticket"></i> Tickets</a>
              <%}else if (user_role === 'agent') {%>
                <a href="/dashboard/agent/ticket"><i class="fa-solid fa-ticket"></i> Tickets</a>
              <%}%>
            </span>
            <span class="sidebar_link">
              <a href="/dashboard/reports"><i class="fa-solid fa-file-pen"></i> Report</a>
            </span>
          </div>

        </div>
      </div>
      
      <div class="main_content">
        <div class="main_content-top">
          <button
            type="button"
            class="sidebar_collapse-btn btn"
            id="toggleSidebar">
            <i class="fa-solid fa-bars"></i>
          </button>
          <div class="user">
            <div class="user_info">
              <a href="/dashboard/staff/edit-profile">Edit Profile</a>
              <a href="/dashboard/logout">Sign Out</a>
            </div>
          </div>
        </div>
        <div class="main_content-main">
          <div class="dashboard_title">
            <h2>Dashboard</h2>
            <div class="dashboard_title-nav">
              <i class="fa-solid fa-gauge"></i>
              <small>Home </small>
              <small><i class="fa-solid fa-chevron-right"></i></small>
              <small>Dashboard</small>
            </div>
          </div>
          <div class="dashboard_content">
            <div class="dashboard_home">
              <div class="row">
                <div class="col-lg-3 col-md-6">
                  <div class="dashboard_stats tickets">
                    <h2 class="dashboard_stats-amount"><%= totalTickets %></h2>
                    <p class="dashboard_stats-title">Total Tickets</p>
                    <span class="dashboard_stats-icon"
                      ><i class="fa-solid fa-ticket"></i
                    ></span>
                    <a href="#" class="dashboard_stats-link"
                      >More info <i class="fa-solid fa-circle-arrow-right"></i
                    ></a>
                  </div>
                </div>
                <div class="col-lg-3 col-md-6">
                  <div class="dashboard_stats today">
                    <h2 class="dashboard_stats-amount"><%= todaysTicketCount %></h2>
                    <p class="dashboard_stats-title">Todays Tickets</p>
                    <span class="dashboard_stats-icon"
                      ><i class="fa-solid fa-ticket"></i
                    ></span>
                    <a href="#" class="dashboard_stats-link"
                      >More info <i class="fa-solid fa-circle-arrow-right"></i
                    ></a>
                  </div>
                </div>
                <div class="col-lg-3 col-md-6">
                  <div class="dashboard_stats tickets">
                    <h2 class="dashboard_stats-amount"><%= openTicketCount %></h2>
                    <p class="dashboard_stats-title">Open Tickets</p>
                    <span class="dashboard_stats-icon"
                      ><i class="fa-solid fa-ticket"></i
                    ></span>
                    <a href="#" class="dashboard_stats-link"
                      >More info <i class="fa-solid fa-circle-arrow-right"></i
                    ></a>
                  </div>
                </div>
                <div class="col-lg-3 col-md-6">
                  <div class="dashboard_stats agents">
                    <h2 class="dashboard_stats-amount"><%= inprogressTicketCount %></h2>
                    <p class="dashboard_stats-title">Tickets In Progress</p>
                    <span class="dashboard_stats-icon"
                      ><i class="fa-solid fa-users"></i
                    ></span>
                    <a href="#" class="dashboard_stats-link"
                      >More info <i class="fa-solid fa-circle-arrow-right"></i
                    ></a>
                  </div>
                </div>
                <div class="col-lg-3 col-md-6">
                  <div class="dashboard_stats clients">
                    <h2 class="dashboard_stats-amount"><%= closedTicketCount %></h2>
                    <p class="dashboard_stats-title">Closed Tickets</p>
                    <span class="dashboard_stats-icon"
                      ><i class="fa-solid fa-users"></i
                    ></span>
                    <a href="#" class="dashboard_stats-link"
                      >More info <i class="fa-solid fa-circle-arrow-right"></i
                    ></a>
                  </div>
                </div>

                <div class="col-lg-3 col-md-6">
                  <div class="dashboard_stats agents">
                    <h2 class="dashboard_stats-amount"><%= totalAgents %></h2>
                    <p class="dashboard_stats-title">Total Agents</p>
                    <span class="dashboard_stats-icon"
                      ><i class="fa-solid fa-users"></i
                    ></span>
                    <a href="#" class="dashboard_stats-link"
                      >More info <i class="fa-solid fa-circle-arrow-right"></i
                    ></a>
                  </div>
                </div>
                <div class="col-lg-3 col-md-6">
                  <div class="dashboard_stats clients">
                    <h2 class="dashboard_stats-amount"><%= totalClients %></h2>
                    <p class="dashboard_stats-title">Total Clients</p>
                    <span class="dashboard_stats-icon"
                      ><i class="fa-solid fa-users"></i
                    ></span>
                    <a href="#" class="dashboard_stats-link"
                      >More info <i class="fa-solid fa-circle-arrow-right"></i
                    ></a>
                  </div>
                </div>
                <div class="col-lg-3 col-md-6">
                  <div class="dashboard_stats today">
                    <h2 class="dashboard_stats-amount"><%= lowPriorityCount %></h2>
                    <p class="dashboard_stats-title">Low Priority Tickets</p>
                    <span class="dashboard_stats-icon"
                      ><i class="fa-solid fa-ticket"></i
                    ></span>
                    <a href="#" class="dashboard_stats-link"
                      >More info <i class="fa-solid fa-circle-arrow-right"></i
                    ></a>
                  </div>
                </div>
                <div class="col-lg-3 col-md-6">
                  <div class="dashboard_stats agents">
                    <h2 class="dashboard_stats-amount"><%= mediumPriorityCount %></h2>
                    <p class="dashboard_stats-title">Medium Priority Tickets</p>
                    <span class="dashboard_stats-icon"
                      ><i class="fa-solid fa-users"></i
                    ></span>
                    <a href="#" class="dashboard_stats-link"
                      >More info <i class="fa-solid fa-circle-arrow-right"></i
                    ></a>
                  </div>
              </div>
              <div class="col-lg-3 col-md-6">
                <div class="dashboard_stats clients">
                  <h2 class="dashboard_stats-amount"><%= highPriorityCount %></h2>
                  <p class="dashboard_stats-title">High Priority Tickets</p>
                  <span class="dashboard_stats-icon"
                    ><i class="fa-solid fa-users"></i
                  ></span>
                  <a href="#" class="dashboard_stats-link"
                    >More info <i class="fa-solid fa-circle-arrow-right"></i
                  ></a>
                </div>
              </div>
            </div>

            <% if (error.length > 0) {%>
              <div id="error-msg">
                <i class="fa fa-times-circle"></i>
                <%= error %>
              </div>
            <%}else{%>
              <div id="error-msg"></div>
            <%}%>
    
            <% if (success.length > 0){%>
              <div id="success-msg">
                <i class="fa fa-check"></i>
                <%= success %>
              </div>
            <%}%>

            <% if (info.length > 0){%>
              <div id="info-msg">
                <i class="fa fa-info-circle"></i>
                <%= info %>
              </div>
            <%}%>

          </div>
        </div>
      </div>
    </main>
  </body>
</html>
