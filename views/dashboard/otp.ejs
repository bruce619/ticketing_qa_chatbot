<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <title>OTP</title>

    <!-- Font awsome Kit -->
    <script src="https://kit.fontawesome.com/62765ee528.js" crossorigin="anonymous"></script>

    <!-- Bootstrap CDN -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous" />

      <!-- custom css -->
    <link rel="stylesheet" href="/css/main.css" />
    <!-- custom js -->
    <script src="/js/dashboard/utils.js" defer></script>
  </head>
  <body>
    <nav class="navigation">
      <div class="container">
        <div class="navigation__brand">
          <h5 class="text-bolder"><a href="/">CBI</a></h5>
        </div>
        <div class="navigation__actions">
          <div class="navigation__actions-links">
            <a href="/">Home</a> <a href="#">Online Store</a>
          </div>
          <div class="navigation__actions-buttons">
            <a href="/login" class="btn btn__signup">Dashboard</a>
          </div>
        </div>
      </div>
    </nav>

    <main class="signup">
      <div class="signup__container">
        <h4>Insert OTP code</h4>
        <form action="/dashboard/auth/otp/<%= user %>" method="POST" class="signup__form">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
          <div class="form_group">
            <input type="text" name="otp" id="otp" placeholder="OTP" required/>              
          </div>
          <button class="btn btn__submit" type="submit">Submit</button>
        </form>

        <% if (error.length > 0) {%>
          <div id="error-msg">
            <i class="fa fa-times-circle"></i>
            <%= error %>
          </div>
        <%}else{%>
          <div id="error-msg"></div>
        <%}%>

        <% if (success.length > 0){%>
          <div id="success-msg">
            <i class="fa fa-check"></i>
            <%= success %>
          </div>
        <%}%>

      </div>
    </main>
  </body>
</html>